{
    "extends": "eslint:recommended",
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "overrides": [
      {
        "files": ["*.js"],
        "rules": {
            "no-unused-vars": "off",
            "no-undef": "off"
            // Any additional rules can be turned off as needed
          }
      }
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    }
  }
  